{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "Auto-merge GitHub Actions",
      matchManagers: ["github-actions"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["minor", "patch", "digest"],
      ignoreTests: true
    },
    {
      description: "Auto-merge Helm Release (patch only)",
      matchDatasources: ["helm", "docker"],
      automerge: true,
      automergeType: "pr",
      matchUpdateTypes: ["patch"],
      ignoreTests: true
    },
    {
      description: "Auto-merge staging container images directly (no PR)",
      matchDatasources: ["docker"],
      matchFileNames: ["kubernetes/apps/base/business-system-staging/**"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["minor", "patch", "digest"],
      ignoreTests: true
    }
  ]
}
