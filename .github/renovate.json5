{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  forkProcessing: "enabled",
  // hostRules are passed via RENOVATE_HOST_RULES env var in workflow
  extends: [
    "config:recommended",
    // TODO: Consider using best-practices once OCI sha256 digests are supported
    // "config:best-practices",
    "docker:enableMajor",
    "security:openssf-scorecard",
    ":automergeBranch",
    ":automergeDigest",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(Australia/Melbourne)",
    "github>mak011p/k8s-gitops-hayden//.renovate/autoMerge.json5",
    "github>mak011p/k8s-gitops-hayden//.renovate/changelogs.json5",
    "github>mak011p/k8s-gitops-hayden//.renovate/customManagers.json5",
    "github>mak011p/k8s-gitops-hayden//.renovate/grafanaDashboards.json5",
    "github>mak011p/k8s-gitops-hayden//.renovate/groups.json5",
    "github>mak011p/k8s-gitops-hayden//.renovate/labels.json5",
    "github>mak011p/k8s-gitops-hayden//.renovate/semanticCommits.json5",
  ],
  dependencyDashboardAutoclose: true,
  dependencyDashboardTitle: "Renovate Dashboard ðŸ¤–",
  suppressNotifications: ["prEditedNotification", "prIgnoreNotification"],
  "pre-commit": {
    enabled: true,
  },
  ignorePaths: ["**/*.enc.*", "**/resources/**"],
  packageRules: [
    {
      // Always create PRs for container/helm updates (no dashboard approval needed)
      // Minor/patch will auto-merge, major will create PR for manual approval
      description: "Auto-create PRs for all docker/helm updates",
      matchDatasources: ["docker", "helm"],
      dependencyDashboardApproval: false,
      prCreation: "immediate",
    },
    {
      // Custom versioning for Odoo with date+time tags (18.0.YYYYMMDD.HHMM-sha)
      // patch=date, prerelease=time ensures proper sorting for same-day builds
      // Time component (.HHMM) is optional to support legacy tags (18.0.YYYYMMDD-sha)
      // NOTE: SHA suffix (-abc1234) is matched but NOT captured - this allows Renovate
      // to properly compare versions without treating each SHA as a unique "build" version
      matchDatasources: ["docker"],
      matchPackageNames: ["ghcr.io/hayden-agencies/odoo"],
      versioning: "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:\\.(?<prerelease>\\d+))?-[a-f0-9]+$",
    },
    {
      // Custom versioning for label-generator with date-based tags (YYYYMMDD-sha)
      matchDatasources: ["docker"],
      matchPackageNames: ["ghcr.io/mak011p/label-generator"],
      versioning: "regex:^(?<major>\\d{8})-(?<build>.+)$",
    },
    {
      // Custom versioning for claude-remote-dev-pod with date-based tags (YYYYMMDD-sha)
      matchDatasources: ["docker"],
      matchPackageNames: ["ghcr.io/mak011p/claude-remote-dev-pod"],
      versioning: "regex:^(?<major>\\d{8})-(?<build>.+)$",
    },
  ],
  flux: {
    managerFilePatterns: ["/(^|/)kubernetes/.+\\.ya?ml$/"],
  },
  "helm-values": {
    managerFilePatterns: ["/(^|/)kubernetes/.+\\.ya?ml$/"],
  },
  kubernetes: {
    managerFilePatterns: ["/(^|/)kubernetes/.+\\.ya?ml$/"],
  },
}
